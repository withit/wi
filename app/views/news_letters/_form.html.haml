- form_for @news_letter, :html => {:multipart => true} do |f|
  %p
    %label Name
    %br
    = f.text_field :name
  %p
    %label Description
    %br
    = f.text_area :description
  %p
    %label Image
    %br
    = f.file_field :image
  %p
    %label Logo
    %br
    = f.file_field :logo
  %p
    = submit_tag
    or
    = link_to 'Cancel', news_letters_path
  