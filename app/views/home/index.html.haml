.projects
  %ul
    - @projects.each do |project|
      %li.project{:class =>  project.url.blank? ? nil : "selected"}
        .panel
          = image_tag project.thumbnail.url
          %h3= project.name
          = link_to project.url, project.url unless project.url.blank?
        = image_tag project.main_image.url, :class => 'main'

.testimonials
  %h2 Testimonials
  - @testimonials.each do |testimonial| 
    .testimonial
      = image_tag testimonial.image.url 
      %p= testimonial.content
      %p.author= testimonial.author

.content
  .blog
    %h2 Blog
    .blog_links
      = link_to 'subscribe blog','#', :class => 'rss'
      = link_to 'browse all','#'
    - if @post
      .post
        .calendar
          %span.day= @post.created_at.day
          %span.month= @post.created_at.strftime('%B')
      
        %h3= link_to @post.title, @post
        %p.author
          %label Author:
          = @post.author_name
        =# image_tag @post.image.url
        = truncate(strip_tags(textilize(@post.content)),900)
        = link_to 'more ..', @post
        .actions
          (#{@post.comments_count}) #{@post.comments_count == 1 ? 'Comment' : 'Comments'} | #{link_to '[+] Share', '#'}

