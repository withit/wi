%h1= t('project.edit.heading')
- form_for @project, :html => {:multipart => true} do |f|
  %p
    %label= t('project.name')
    = f.text_field :name
  %p
    %label= t('project.description')
    = f.text_area :description
  %p
    %label= t('project.picture')
    = f.file_field :picture
  %p
    %label= t('project.logo')
    = f.file_field :logo
  %p
    %label Slide 
    = f.file_field :slide
  %p
    %label Sort Order
    = f.text_field :sort_order
  %p
    %label Include in footer
    = f.check_box :in_footer  
  %p
    %label Current
    (will be listed on the websites page)
    = f.check_box :current
  %p
    %label Has been helped
    (will be included on the who we helped page)
    = f.check_box :helped
  %p
    = submit_tag t('project.edit.submit')
    or
    = link_to 'Cancel', projects_path
