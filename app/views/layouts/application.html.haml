!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    %title= ['With Imagination', @page_title].compact * ' - '
    = stylesheet_link_tag 'wi', :media => 'all'
    = javascript_include_tag :defaults, 'lowpro', :cache => true
    = yield :head 
  %body.background{:class => "#{controller_name}  #{@body_class}"}
    .main
      - if admin? 
        .admin_toolbar
          = link_to 'Dashboard', dashboard_path 
          |
          = link_to 'Log out', session_path, :method => :delete
      .top_banner
        %ul.top_menu
          - Page.roots.each do |page|
            %li= link_to(image_tag(((@page && @page.root) == page) ? page.hover_tab.url : page.tab.url , :alt =>  page.title), unwrapped_page_path(page))
      .content
        = yield
      .footer
        .clients
          &nbsp;
          = image_tag "footer/our_clients.jpg", :alt => "our clients",  :width => "84", :height => "20"
          - Project.find(:all, :conditions => {:in_footer => true}, :order => 'position').each do |p|
            = image_tag p.logo.url, :alt => p.name, :border => 0
        .reflection
          &reg; Copyright 
          = Date.today.year 
          |
          = link_to "Contact Us", contact_us_path
          |
          = link_to 'Company', page_path(:company)
          |
          = link_to 'Projects', page_path(:projects)
