- content_for(:nested) do
  - content_for :head do
    = auto_discovery_link_tag(:rss, "/news.rss")

  .breadcrumb
    = link_to 'home', '/'
    &gt;
    = link_to @month.to_date.to_formatted_s(:year_month), news_by_month_path(@month.year, @month.month)

  .left
    .side_menu
      = image_tag 'news/menu.png', :alt => 'latest_news'
      %ul
        - unless @month.first?
          %li{:style => 'height: auto; line-height: 12px; padding-top: 12px; padding-bottom: 12px; text-transform: upcase;'}
            = link_to "prev", news_by_month_path(:year => @month.prev.year, :month => @month.prev.month)
        - @months.each do |month|
          %li{:style => 'height: auto; line-height: 12px; padding-top: 12px; padding-bottom: 12px; text-transform: upcase;', |
              :class => month == @month && action_name != 'show' ? 'current' : ''} |
            = link_to month.to_date.to_formatted_s(:long_year_month), news_by_month_path(:year => month.year, :month => month.month)
            - if month == @month
              %ul{:style => "margin: 0; padding: 0; padding-left: 1em;"}                
                - @month.news_items.each do |item|
                  %li{:style => "text-transform: none; line-height: 12px; border: none; padding: 0; padding-top : 1em; margin: 0; height: 16px;"}
                    = link_to_if item != @news, item.title, |
                    news_item_by_month_path(:year => @month.year,  :month => @month.month, :id => item.to_param) |                      
        - unless @month.last?
          %li{:style => 'height: auto; line-height: 12px; padding-top: 12px; padding-bottom: 12px; text-transform: upcase;'}
            = link_to "next", news_by_month_path(:year => @month.succ.year, :month => @month.succ.month)         
          //=link_to_if news != @news, news.title, news_item_path(news), :style => 'text-transform: uppercase;'
  .right
    .side_menu
      #contact_information
        %h3 Contact Us
        %p
          Email:
          = mail_to 'info@wi.com.au','info@wi.com.au', :encode => "javascript"
        %p Phone: + 61 2 9929 9229
        %p Fax: + 61 2 9460 4770
      .twitter= link_to 'Follow', twitter_path
      .subscribe= link_to 'Subscribe Latest News', news_path(:format => 'rss')

  .center
    .banner{:style => "margin:auto; width:501px;"}
      = image_tag 'news/banner.jpg', :alt => 'latest_news'
    #page_content
      = yield
      - if admin?
        .admin
          = link_to 'Add more news...', new_news_item_path
            
  .clear

= render :file => "layouts/application"