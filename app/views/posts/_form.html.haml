- form_for(@post, :html => {:multipart => true}) do |f|
  = f.error_messages

  %p
    = f.label :title 
    %br
    = f.text_field :title 

  %p
    = f.label :author_name 
    %br
    = f.text_field :author_name
  
  %p
    = f.label :content
    %br
    = f.text_area :content
  
  %p
    = f.label :source 
    %br
    = f.text_field :source
  
  %p
    = f.label :tag_names
    %br
    = f.text_field :tag_names
  %h2 Select an image
  - @images.each do |image|
    .image
      = f.radio_button :post_image_id, image.id
      = image_tag image.attachment.url(:thumb)
  %h2 or upload a new image
  = f.file_field :image
  %p
    = f.submit 'Submit'
