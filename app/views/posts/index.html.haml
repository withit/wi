.main
  .breadcrumbs
    %ul
      %li= link_to 'home', root_path
      %li= @page.name
  .sidebar-right
    .links
      %ul
        %li.rss= link_to 'Subscribe to our RSS REED','#'
        %li.linked_in= link_to 'Find us on linkedin','#'
        %li.twitter_link= link_to "Follow us on twitter",'#'
      = render 'tags/tags'
      
    .twitter
      %h2 Twitter
      = link_to 'follow on twitter', '#', :class => 'follow' 
      #tweets
    .comments
      %h2 Recent Comments
      - @comments.each do |comment|
        .comment
          %span.author= link_to comment.author_name.to_s, post_path(comment.post, :anchor => dom_id(comment))
          = comment.message
  .posts
    - @posts.each do |post|
      .post
        = image_tag 'post.image.url'
        %h2= post.title
        %p.information Posted on #{post.created_at.strftime('%d. %b, %Y')} | Author: #{post.author_name}
        .tweets
          %span.count= post.tweets_count
          tweets
          = link_to 'retweet','#'
        %p= truncate(strip_tags(textilize(post.content)),300)
        .links
          = link_to 'continue reading', post, :class => 'continue_reading'
          %span
            = link_to "(#{post.comments_count}) #{post.comments_count == 1 ? 'comment' : 'comment'.pluralize}" 
            | [+] Share
