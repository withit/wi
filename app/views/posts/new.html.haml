%h1 New post

- form_for(@post) do |f|
  = f.error_messages

  %p
    = f.label :title 
    %br
    = f.text_field :title 

  %p
    = f.label :author_name 
    %br
    = f.text_field :author_name
  
  %p
    = f.label :content
    %br
    = f.text_area :content
  
  %p
    = f.label :source 
    %br
    = f.text_field :source
  
  %p
    = f.label :tag_names
    %br
    = f.text_field :tag_names
  
  %p
    = f.submit 'Create'
  
= link_to 'Back', posts_path