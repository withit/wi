.post
  = image_tag post.image.url
  %h2= post.title
  %p.information Posted on #{post.created_at.strftime('%d. %b, %Y')} | Author: #{post.author_name}
  .tweets
    :javascript
      tweetmeme_service = 'bit.ly';
      tweetmeme_url = '#{post_url(post)}';
    <script type="text/javascript" src="http://tweetmeme.com/i/scripts/button.js"></script>
  %p= truncate(strip_tags(textilize(post.content)),300)
  .links
    = link_to 'continue reading', post, :class => 'continue_reading'
    %span
      = link_to "(#{post.comments_count}) #{post.comments_count == 1 ? 'comment' : 'comment'.pluralize}", post_path(post, :anchor => "comments")
      | [+] Share