!!! XML
%rss{:version => "2.0", :"xmlns:dc" => "http://purl.org/dc/elements/1.1/",  :"xmlns:atom" => 'http://www.w3.org/2005/Atom'}
  %channel
    %title With Imagination News
    %link= posts_url
    %description The latest news from With Imagination
    %atom:link{:href => posts_url(:format => :rss), :rel => "self", :type => "application/rss+xml"}
    - @posts.each do |post|
      %item
        %pubDate= post.created_at.rfc822
        %title= h(post.title)
        %description= h textilize(post.content)
        %guid= post_url(post)